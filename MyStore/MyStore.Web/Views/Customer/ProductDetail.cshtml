<script>
    $(document).ready(function() {
        $('.btn-add-to-cart').click(function(event) {
            event.preventDefault(); // tránh submit form nếu có

            var button = $(this);
            var productId = button.data('product-id');

            // Lấy quantity từ input .qty-val gần nhất
            var quantityInput = button.closest('.detail-extralink').find('.qty-val');
            var quantity = parseInt(quantityInput.val()) || 1; // default 1 nếu input rỗng hoặc lỗi

            $.ajax({
                url: '@Url.Action("AddToCart", "Customer")',
                type: 'POST',
                data: { productId: productId, quantity: quantity },
                success: function(response) {
                    if(response.success){
                        new Notify({
                            status: 'success',
                            title: 'Success',
                            text: response.message,
                            effect: 'fade',
                            speed: 300,
                            showIcon: true,
                            showCloseButton: true,
                            autoclose: true,
                            autotimeout: 3000,
                            position: 'right top'
                        });
                        // TODO: update UI giỏ hàng
                    } else {
                        new Notify({
                            status: 'error',
                            title: 'Failed',
                            text: response.message,
                            effect: 'fade',
                            speed: 300,
                            showIcon: true,
                            showCloseButton: true,
                            autoclose: true,
                            autotimeout: 3000,
                            position: 'right top'
                        });
                    }
                },
                error: function(xhr, status, error){
                    new Notify({
                        status: 'error',
                        title: 'Ajax Error',
                        text: error,
                        effect: 'fade',
                        speed: 300,
                        showIcon: true,
                        showCloseButton: true,
                        autoclose: true,
                        autotimeout: 3000,
                        position: 'right top'
                    });
                }
            });
        });
    });
</script>

